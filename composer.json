{
    "name": "getjump/sanitizer",
    "type": "library",
    "description": "Library to sanitize and validate input",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavel Savinov",
            "email": "contact@getjump.me"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*"        
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "optimize-autoloader": true        
    },
    "autoload": {
        "psr-4": {
            "getjump\\Sanitizer\\": "src/"
        }        
    },
    "autoload-dev": {
        "psr-4": {
            "getjump\\Sanitizer\\Tests\\": "tests/"
        }
    },
    
    "minimum-stability": "dev",
    "prefer-stable": true
}
